@model Club
@{
    ViewData["Title"] = "Club Details";
}

<h2>Club Details</h2>
<table>
    <tr><td style="font-weight:bold;">Clube name:</td><td>@Model.Name</td></tr>
    <tr><td style="font-weight:bold;">Founded:</td><td>@Model.Foundation.ToShortDateString()</td></tr>
    <tr><td style="font-weight:bold;">Chest:</td><td><img src="@Model.CresteLinkAddress" style="width: 70px;" /></td></tr>
    <tr><td style="font-weight:bold;">City:</td><td>@Model.City</td></tr>
    <tr><td style="font-weight:bold;">Country:</td><td>@Model.Country</td></tr>
</table>

<h4>Players:</h4>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                Player Name
            </th>
            <th>
                Player Position
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Player player in Model.Players)
        {
            <tr>
                <td>
                    @player.Name
                </td>
                <td>
                    @player.Position
                </td>
            </tr>
        }

