@model IEnumerable<Club>
@{
    ViewData["Title"] = "Clubs";
}

<h2>Clubs</h2>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Club Name</th>
            <th scope="col">Foundation</th>
            <th scope="col">Crest</th>
            <th scope="col">City</th>
            <th scope="col">Country</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var club in Model)
        {
            <tr>
                <td>
                    <form method="post" asp-action="ShowClubDetails">
                        <input type="hidden" name="clubId" value="@club.Id"/>
                        <button type="submit" class="btn btn-link">
                            @club.Name
                        </button>
                    </form>
                </td>
                <td>@club.Foundation.ToShortDateString()</td>
                <td>
                    @if (club.CresteLinkAddress != null)
                    {
                        <img class="crest" src="@club.CresteLinkAddress" />
                    }
                </td>
                <td>@club.City</td>
                <td>@club.Country</td>
            </tr>
        }
    </tbody>
</table>