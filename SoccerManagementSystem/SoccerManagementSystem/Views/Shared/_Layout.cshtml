<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/jquery/jquery.js"></script>
    <script src="~/bootstrap/js/bootstrap.bundle.min.js"></script>
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row mb-5">
            <div class="col-sm-2">
                <img id="imgTopLogo" src="~/images/logo.png" />
            </div>
            <div class="col-sm-10">
                <h1 class="display-4">A Soccer club management system</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                <div><a class="btn btn-outline-dark btn-block" asp-action="Index">Home</a></div>
                <div><a class="btn btn-outline-dark btn-block" asp-action="Club">Club</a></div>
                <div><a class="btn btn-outline-dark btn-block" asp-action="AddClub">Add Club</a></div>
                <div><a class="btn btn-outline-dark btn-block" asp-action="ShowClubDetails">Club</a></div>
                <div><a class="btn btn-outline-dark btn-block" asp-action="ManagePlayers">Manage Players</a></div>
            </div>
            <div class="col-sm-10">
                @RenderBody()
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-sm text-center">
                COMP 229 - Web Application Development - by Jovane Marques
            </div>
        </div>
    </div>
</body>
</html>
