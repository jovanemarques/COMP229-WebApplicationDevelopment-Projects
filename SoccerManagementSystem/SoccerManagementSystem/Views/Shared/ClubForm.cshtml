@model Club
<div class="form-group row">
    <label asp-for="Name" class="col-form-label col-sm-3 font-weight-bold">Name</label>
    <div class="col-sm-8">
        <input type="text" class="form-control" asp-for="Name" placeholder="Name" />
    </div>
</div>
<div class="form-group row">
    <label asp-for="Foundation" class="col-form-label col-sm-3 font-weight-bold">Foundation</label>
    <div class="col-sm-8">
        <input type="date" class="form-control" asp-for="Foundation" placeholder="Foundation" />
    </div>
</div>
<div class="form-group row">
    <label asp-for="CresteLinkAddress" class="col-form-label col-sm-3 font-weight-bold">Creste Link Address</label>
    <div class="col-sm-8">
        <input type="text" class="form-control" asp-for="CresteLinkAddress" placeholder="Creste Link Address" />
    </div>
</div>
<div class="form-group row">
    <label asp-for="City" class="col-form-label col-sm-3 font-weight-bold">City</label>
    <div class="col-sm-8">
        <input type="text" class="form-control" asp-for="City" placeholder="City" />
    </div>
</div>
<div class="form-group row">
    <label asp-for="Country" class="col-form-label col-sm-3 font-weight-bold">Country</label>
    <div class="col-sm-8">
        <input type="text" class="form-control" asp-for="Country" placeholder="Country" />
    </div>
</div>